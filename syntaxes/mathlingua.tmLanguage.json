{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "version": "0.2.0",
  "name": "Mathlingua",
  "scopeName": "source.math",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#ids"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "ids": {
      "patterns": [
        {
          "name": "support.function.mathlingua",
          "begin": "\\[",
          "end": "\\]",
          "captures": {
            "1": {
              "name": "support.function.mathlingua"
            },
            "2": {
              "name": "support.function.mathlingua"
            },
            "3": {
              "name": "support.function.mathlingua"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mathlingua",
          "match": "[a-zA-Z]+:"
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment",
          "begin": "--",
          "end": "\n"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "constant.numeric.mathlingua",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "string.quoted.mathlingua",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "match": "(\\\\[a-zA-Z]+)|(\\.[a-zA-Z]+)|(:[a-zA-Z]+)|(is)",
              "captures": {
                "1": {
                  "name": "support.function.mathlingua"
                },
                "2": {
                  "name": "support.function.mathlingua"
                },
                "3": {
                  "name": "support.function.mathlingua"
                },
                "4": {
                  "name": "support.class.mathlingua"
                }
              }
            }
          ]
        }
      ]
    }
  }
}
